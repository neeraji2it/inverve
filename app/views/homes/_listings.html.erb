<article>
  <div class="container">
    <div class="box-product">
      <div class="row">
        <% if(params[:controller] == "homes" && params[:action] != "search") %>
          <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 box-product-left">
            <div class="box-categories">
              <h4><%= @category.category.name %></h4>
              <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <% @categories.each do |category| %>
                  <% if category.present? %>
                    <% @cat_products = category.products %>
                    <div class="panel panel-default">
                      <div class="panel-heading" role="tab" id="headingOne">
                        <h2 class="panel-title">
                          <a class="collapsed accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne-<%= category.id %>" aria-expanded="false" aria-controls="collapseOne" title="Bedroom"> 
                            <div class="catLink">
                              <%= link_to category.name.capitalize, home_path(category.id) %>
                            </div>
                          </a>
                        </h2>
                      </div>
                    <% end %>
                    <div id="collapseOne-<%= category.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                      <div class="panel-body">
                        <ul>
                          <%if @cat_products.present? %>
                            <% @cat_products.each do |product| %>
                              <li>
                                <%= link_to product.name.capitalize, single_product_home_path(product.id) %>
                              </li>
                            <% end %>
                          <%else%>
                            <li>
                              Coming Soon!!!!!
                            </li>
                          <%end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="box-categories box-featurE clearfix">
              <h4>Featured Products</h4>
              <ul class="list-product">
                <% if @featured.present? %>
                  <% @featured.each do |product| %>
                    <li>
                      <div class="frow frow-product">
                        <div>
                          <%= link_to image_tag(product.images.present? ? (product.images.first.avatar.url(:original)) : "/assets/missing.png", height: "50px", width: "50px"),single_product_home_path(product.id) %>
                        </div>
                        <div>
                          <h5><%=link_to product.name, single_product_home_path(product.id)%></h5>
                          <h2><%= product.price %></h2>
                          <br/>
                        </div>
                      </div>
                    </li>
                  <% end %>
                <%else%>
                  <li>
                    Coming Soon!!!!!
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <% if @products.present? %>
          <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <div id="leftColumn" class="product-outer-box">
              <div class="row">
                <% @products.each do |product| %>
                  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 ">
                    <div class="box-productimg">
                      <a href="#" title="">
                        <%=link_to image_tag(product.images.present? ? (product.images.first.avatar.url(:small)) : "/assets/missing.png", height: "200px", width: "222px") %>
                      </a>
                      <div class="productimg-hover">
                        <ul>
                          <li><a href="#" title="" class="icon-zoom" data-toggle="modal" data-target="#myModal-<%= product.id %>" onclick="zoomer(<%= product.id %>);"></a></li>
                          <li><%= link_to '<i class="icon-open"></i>'.html_safe, single_product_home_path(product.id) %></li>
                        </ul>



                      </div>
                    </div>
                    <div class="box-content" style="margin-bottom: 20px;">
                      <h3>Rs. <%= product.price %></h3>
                      <h4><%= product.name.capitalize %></h4>
                      <% if product.discount? %>
                        <span class="circleP">
                          <%= product.discount%>%
                        </span>
                      <%end %>
                    </div>
                  </div>

                  <%= render :partial => "popup_product_slider", locals: {:product => product} %>

                <% end %>
              </div>
              <div class="row">
                <div class="box-pagination responsive-pagination">
                  <span class="text-float-left">Items <%= @products.count%> total</span>
                  <span class="text-float-right"><%= will_paginate @products, renderer: BootstrapPagination::Rails %></span>
                </div>
              </div>

            </div>
          </div>
        <% else %>
          <h2>Comming Soon!!!!!</h2>
        <% end %>
      </div>
    </div>
    <nav>
    </nav>
  </div>
</article>
